{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "types": [
            "node"
        ],
        "outDir": "./dist/",
        "rootDir": "./src/",
        "strict": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "src/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "./test"
    ],
}